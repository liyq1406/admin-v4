// ==================================================
// 助手类
// ==================================================

// 隐藏/显示元素
.hidden
  display none !important
.show
  display block !important

// 不可见
.invisible
  visibility hidden

// 浮动
.fl
  float left !important

.fr
  float right !important

.fn
  float none !important

// 清除浮动
.clearfix
  clearfix()

.inline
  display inline-block

.block
  display block

.pointer
  cursor pointer

// 文本隐藏
.hide-text
  hide-text()

.text-overflow
  text-overflow()

// 高亮
.hl-red
  color red !important
.hl-green
  color green !important
.hl-orange
  color orange !important
.hl-gray
  color gray-light !important

// 对齐
.tal
  text-align left !important

.tac
  text-align center !important

.tar
  text-align right !important

// 不允许换行
.no-wrap
  white-space no-wrap !important

// 宽度
for i in 3..30
  .w{i}0
    width unit(i, "0px") !important

// 宽度
for i in 1..20
  .wp{i * 5}
    width unit(i * 5, "%") !important

.textarea-lg
  height 240px !important

// 外间距
for i in 0 5 10 15 20 30 40
  .mt{i}
    margin-top unit(i, px) !important
  .mr{i}
    margin-right unit(i, px) !important
  .mb{i}
    margin-bottom unit(i, px) !important
  .ml{i}
    margin-left unit(i, px) !important
