// 分页
.pager
  font-size 0
  margin-bottom 40px

  .pager-btn
  .pager-input
    display inline-block
    vertical-align middle

  .pager-btn
    background #EEE
    border none
    font-size 8px
    color #A8A8A8
    padding 0 10px
    height 26px
    line-height 28px
    transition background .3s, color .3s
    outline none

    &:hover
      background red
      color #FFF

  .pager-input
    width 44px
    text-align center
    border 1px solid #E5E5E5
    padding 0
    font-size 12px
    margin 0 5px
    height 26px
    line-height 26px
