.panel
  border 1px solid #e0e0e0
  background #FFF
  padding 0 22px
  box-sizing border-box
  margin 0 10px 20px

.panel-hd
  border-bottom 1px solid #e4e4e4

  h2
    margin 0
    font-size 18px
    font-weight normal
    line-height 36px
    padding-top 12px

  .btn-group
    float right
    margin-top 12px

  .date
    float right
    margin-top 20px

.panel-bd
  .action-bar
    clearfix()
    padding-top 20px
    margin-bottom 20px

    .search-box
      float right

  .action-group
    clearfix()

    .btn
      float left
      margin-right 20px

  .form
    padding 30px 0 80px
