// 提示
.alert
  position relative
  padding-left 70px
  margin 40px

  .fa
    absolute left top
    size 50px
    color red
    font-size 50px
    text-align center

  h2
    margin 0 0 10px
    font-weight normal

  p
    margin 0

  .actions
    margin-top 30px

    .btn
      height 36px
      line-height 36px
      font-size 14px
      width 80px
      text-align center

.alert-text
  background #F3F3F3
  padding 10px 20px
  border-left 5px solid #DDD
  margin 0
  line-height 24px
  font-size 12px

  p
    margin 0

.alert-text-success
  background #EEF7EB
  border-color #BBDBA1
