@import '../common'

.form
  .input-text-wrap
    position relative

    .input-text
      border 1px solid #D9D9D9
      display block
      width 100%
      box-sizing border-box
      font-size 14px
      height 36px
      line-height 24px
      padding 6px 20px

    textarea.input-text
      height 72px
      resize none

    .placeholder
      absolute left 20px top 0
      height 36px
      line-height 36px
      color #A9A9A9

  .select
    position relative

    select
      position relative
      display block
      border 1px solid #D9D9D9
      width 100%
      border-radius 0
      padding 7px 6px 6px 20px
      background #FFF
      appearance none
      outline none

    &:after
      absolute right 10px top 15px
      content ""
      triangle #999 10px down
      z-index 1

    &.select-sm
      select
        padding 3px 3px 3px 14px
        font-size 12px

      &:after
        top 11px

  .input-text-wrap
    .vf-dirty.vf-invalid
      border-color red

  // 单选
  label.radio
  label.checkbox
    display inline-block
    line-height 30px

  // 单选/多选按钮组
  .radio-group
    .radio
      float left
      white-space normal
      margin-right 20px

      input[type="radio"]
        margin-right 4px

  .checkbox-group
    .checkbox
      float left
      white-space normal
      margin-right 20px

      input[type="checkbox"]
        margin-right 4px

  .form-row
    position relative
    margin-bottom 12px
    clearfix()

    .form-control
      float left
      width 110px
      line-height 35px

    .controls
      float left
      max-width 500px
      width 40%
      min-width 250px

    .control-text
      display inline-block
      line-height 35px

  .form-hints
    margin-top 20px
    margin-bottom 10px

  .form-tips
    font-size 12px

    i
      margin-right 5px
      font-size 16px

  .form-tips-success
    color green

    i
      color #92C39E

  .form-tips-error
    color red

    i
      color #B76166

  .form-row-group
    margin-bottom 20px

    & + .form-hints
      margin-top 40px

  .form-actions
    padding-left 110px

.form-auth
  width 550px
  margin 0 auto
  padding 100px 0

  .form-logo
    background #383838 url('assets/images/form_logo.png') no-repeat center top
    height 53px
    padding-bottom 30px

  .form-cont
    padding 40px 85px 0
    box-shadow 0 5px 15px rgba(0, 0, 0, .3)
    background #FFF

  .form-header
    border-bottom 1px solid #E0E0E0
    font-size 0
    padding 0 30px
    margin-bottom 25px

    span
    a
      display inline-block
      font-size 16px
      padding 10px 30px

    a
      & + span
        margin-left 70px

    span
      border-bottom 3px solid red
      padding-bottom 7px
      color red

      & + a
        margin-left 70px

    a:hover
      text-decoration none

    h2
      font-size 24px
      margin 0
      font-weight normal

    p
      font-size 12px
      color gray
      margin 0 0 10px

  .form-body
    padding 0 30px

  .form-actions
    padding-left 0
    text-align center

    .btn
      text-align center
      color #FFF
      height 46px
      line-height 46px
      font-size 14px
      margin 0 auto

  .form-footer
    font-size 12px
    text-align center
    padding 20px 0
