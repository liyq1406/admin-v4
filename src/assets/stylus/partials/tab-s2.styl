// tab
.tab-s2
  border-bottom 1px solid #CCC
  clearfix()

  .tab-s2-item
    float left
    padding 10px 10px 7px
    cursor pointer
    position relative
    margin-bottom -1px
    font-size 12px

    &.active
      color red
      border-bottom 3px solid red

  .actions
    float right
    margin-top 4px

.tab-s2-full
  margin 0 -15px
  padding 0 15px
