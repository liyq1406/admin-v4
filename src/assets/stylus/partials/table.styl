// 表格
table
  border-spacing 0
  border-collapse collapse

.table
  width 100%
  max-width 100%

  th
  td
    border-right 1px solid #CCC
    background #FFF

  th
    padding 10px
    text-align left
    cursor default
    white-space nowrap
    background #E9E9E9
    border-bottom 1px solid #CCC
    font-size 12px

    .fa
      margin-left 10px

    &.sortable
      cursor pointer

    &.active
      color red

  td
    padding 6px 10px
    font-size 12px
    border-bottom 1px solid #E5E5E5

    .text-label
      margin-right 6px

  tr:last-child
    td
      border-bottom-color #CCC

.table-stripe
  tbody
    tr:nth-child(2n+1)
      td
        background #F9F9F9

.table-bordered
  border 1px solid #CCC

// 数据表格
.data-table
  .filter-bar
    background #F6F6F6
    border 1px solid default-border-color
    border-width 1px 1px 0

    h2
      margin 0
      font-size 12px
      line-height 26px
      font-weight normal
