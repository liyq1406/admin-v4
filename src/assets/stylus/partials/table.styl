// 表格
table
  border-spacing 0
  border-collapse collapse
  margin 20px 0

.table
  width 100%
  max-width 100%

  th
  td
    border 1px solid #E4E4E4
    background #FFF

  th
    padding 7px 20px
    text-align left
    cursor default
    white-space nowrap

    .fa
      margin-left 10px

    &.sortable
      cursor pointer

    &.active
      color red

  td
    padding 6px 20px
    font-size 12px

    .text-label
      margin-right 6px

.table-stripe
  tbody
    tr:nth-child(2n+1)
      td
        background #F9F9F9

    tr:hover
      td
        background #FDF6F6

.table-bordered
  border 1px solid #E4E4E4

// 数据列表
.data-table
  position relative

  .icon-loading
    size 32px
    absolute left 50% top 50%
    margin -16px 0 0 -16px
    text-align center
    background rgba(0, 0, 0, .5)
    border-radius 6px

  .fa-refresh
    line-height 32px
    font-size 20px
    color #FFF
