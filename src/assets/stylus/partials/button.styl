// 基础样式
.btn
  display inline-block
  color #FFF
  transition background .3s
  height 32px
  line-height 32px
  padding 0 15px
  font-size 12px
  white-space nowrap

  .fa + .btn-txt
  .btn-txt + .fa
    margin-left 5px

a.btn
  &:visited
    color #FFF

  &:hover
    text-decoration none

button.btn
  border none
  outline none
  appearance none

// 默认按钮样式
.btn-default
  background #C8C8C8

  &:hover
    background darken(@background, 10%)

  &.active
    background red

// 主操作按钮样式
.btn-primary
  background red

  &:hover
    color #FFF
    background darken(red, 10%)

// 成功按钮样式
.btn-success
  background green

  &:hover
    color #FFF
    background darken(green, 10%)

// 信息按钮样式
.btn-info
  background blue

  &:hover
    color #FFF
    background darken(blue, 10%)

.btn-default
.btn-primary
.btn-success
.btn-info
  &.disabled
    background #CCC
    cursor not-allowed

// 链接按钮
.btn-link
  color red

  &:visited
    color red

button.btn-link
  background transparent
  border none
  appearance none
  outline none

  &:hover
    color darken(red, 10%)

// 幽灵按钮
label.btn-ghost
a.btn-ghost
button.btn-ghost
  border 1px solid #BBB
  line-height 30px
  color gray
  transition color .3s, border-color .3s
  box-sizing border-box
  background-image linear-gradient(top, #FDFDFD, #F5F5F5)

  &:visited
    color gray

  &:hover
    color gray-dark
    border-color #999

// 按钮尺寸
.btn-xlg
  height 50px
  line-height 50px
  min-width 120px
  font-size 16px

.btn-lg
  height 36px
  line-height 36px
  min-width 120px
  font-size 14px

.btn-sm
  height 26px
  line-height 26px
  padding 0 8px
  font-size 12px

.btn-mini
  height 20px
  line-height 20px
  padding 0 8px

label.btn-ghost
a.btn-ghost
button.btn-ghost
  &.btn-lg
    line-height 34px

  &.btn-sm
    line-height 24px

  &.btn-mini
    line-height 18px

// 胶囊按钮
.btn-pill
  border-radius 30px

// 块状按钮
.btn-block
  display block
  width 100%
  padding 0

// 上传按钮
.btn-upload
  position relative
  overflow hidden
  cursor pointer

  input[type="file"]
    absolute left top -50px
    opacity 0
    cursor pointer
