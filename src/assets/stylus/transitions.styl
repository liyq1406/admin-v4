// 浮层动画
.modal-enter
.modal-leave
  opacity 0

.modal-enter .modal-dialog
.modal-leave .modal-dialog
  transform scale(1.3)

// 从右到左渐渐出现
.rightToLeft-transition
  transition opacity .3s ease, height .3s ease, transform .3s ease
  opacity 1
  transform translate3d(0,0,0)

.rightToLeft-enter
.rightToLeft-leave
  opacity 0
  transform translate3d(0.3rem,0, 0)

// 菜单动画
.menu-transition
  transition opacity .3s ease, height .3s ease, transform .3s ease
  opacity 1
  transform translate3d(0,0,0)

.menu-enter
.menu-leave
  opacity 0
  transform translate3d(0, 10px, 0)
