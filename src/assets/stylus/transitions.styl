// 视图淡入淡出
.view
  transition transform .5s ease, opacity .5s ease

.view-enter
.view-leave
  opacity 0
  transform translate3d(10px, 0, 0)

// 渐近过渡
.staggered-transition
  transition opacity .2s ease, height .2s ease, transform .2s ease
  margin 0

.staggered-enter
.staggered-leave
  opacity 0
  height 0
  transform translate3d(10px, 0, 0)