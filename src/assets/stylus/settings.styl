// ==================================================
// 基础配置
// ==================================================

// 灰度色
// ------------------------------
black = #000
gray-darker = #020202
gray-dark = #383838
gray = #666
gray-light = #999
gray-lighter = #ccc
white = #FFF

// 彩色
// ------------------------------
orange = #F69052
red = #C0252E
green = #35AA47

// 链接色
// ------------------------------
// 正常状态
link-color = gray

highlight-link-color = red

// 排版
// ------------------------------

// 字体集
arial = Arial, Tahoma, "Helvetica Neue", Helvetica, sans-serif
tahoma = Tahoma, "Helvetica Neue", Helvetica, Arial, sans-serif
helvetica-neue = "Helvetica Neue", HelveticaNeue, Helvetica, Arial, sans-serif
helvetica = "Helvetica Neue", Helvetica, Arial, sans-serif
georgia = Georgia, Cambria, "Times New Roman", Times, serif
times = "Times New Roman", Times, serif
yahei = "Hiragino Sans GB", "Microsoft Yahei", "SimSun"
heiti = "SimHei"
songti = "SimSun"

// 字体设置
browser-default-font-size = 10px
font-stack = yahei
font-color = gray-dark
default-line-height = 1.5

breakpoints = 480 640 800 960 1080

// 等比例缩放
responsive = true
